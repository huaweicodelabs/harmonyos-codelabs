<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:width="match_parent"
        ohos:height="300vp"
        ohos:orientation="vertical">

    <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:orientation="vertical"
            ohos:left_margin="20vp"
            ohos:right_margin="20vp"
            ohos:bottom_margin="10vp"
            ohos:background_element="$graphic:background_white_radius_10">

        <Text
                ohos:text_color="#000000"
                ohos:text="$string:shareDevice"
                ohos:height="50vp"
                ohos:width="match_parent"
                ohos:text_size="16fp"
                ohos:left_padding="20vp"
                ohos:text_alignment="vertical_center"/>

        <ListContainer
                ohos:weight="1"
                ohos:id="$+id:list_container_device"
                ohos:height="0vp"
                ohos:width="match_parent"/>

        <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="50vp"
                ohos:orientation="horizontal">

            <Text
                    ohos:id="$+id:operate_no"
                    ohos:text_color="#1e90ff"
                    ohos:width="0vp"
                    ohos:weight="1"
                    ohos:height="match_parent"
                    ohos:text="$string:cancels"
                    ohos:text_alignment="center"
                    ohos:text_size="17fp"/>

            <Component
                    ohos:width="1vp"
                    ohos:height="25vp"
                    ohos:background_element="#cccccc"
                    ohos:layout_alignment="vertical_center"/>

            <Text
                    ohos:id="$+id:operate_yes"
                    ohos:text_color="#1e90ff"
                    ohos:width="0vp"
                    ohos:weight="1"
                    ohos:height="match_parent"
                    ohos:text="$string:yes"
                    ohos:text_alignment="center"
                    ohos:text_size="17fp"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>